<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="customTimePiker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersInnerTextColor">@color/colorGrayLight</item>
        <item name="android:numbersSelectorColor">@color/colorWhite</item>
        <item name="android:amPmTextColor">@color/colorGrayLight</item>
        <item name="android:textSize">38sp</item>
        <item name="android:numbersTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/museo</item>
    </style>

</resources>
